@page "{EditId?}"
@model Asignment_PRN231_API_FE.Pages.OwnerSide.ManageIngredients.IngredientManagementModel

@{
    ViewData["Title"] = "Ingredient Management";
    Layout = "_LayoutOwnerMangement";
    var toast = TempData["Toast"] as string;
}

@if (!string.IsNullOrEmpty(toast))
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @toast
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-xl px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Ingredients in Stock</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#ingredientModal">
            + Add Ingredient
        </button>
    </div>

    <table class="table table-bordered table-striped mb-4">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Ingredients != null && Model.Ingredients.Any())
            {
                foreach (var item in Model.Ingredients)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Unit</td>
                        <td>
                            @if (item.Status)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Unavailable</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-page="/Manager/IngredientManagement" asp-route-EditId="@item.Id">Edit</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline">
                                <button class="btn btn-sm btn-danger" type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5" class="text-center">No ingredients found.</td></tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade @(Model.ShowFormModal ? "show d-block" : "")" id="ingredientModal" tabindex="-1" aria-labelledby="ingredientModalLabel" aria-hidden="@(Model.ShowFormModal ? "false" : "true")">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title">@((Model.Ingredient.Id > 0) ? "Edit Ingredient" : "Add New Ingredient")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Ingredient.Id" />
                    <div class="form-floating mb-3">
                        <input asp-for="Ingredient.Name" class="form-control" />
                        <label asp-for="Ingredient.Name">Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Ingredient.Quantity" type="number" class="form-control" />
                        <label asp-for="Ingredient.Quantity">Quantity</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Ingredient.Unit" class="form-control" />
                        <label asp-for="Ingredient.Unit">Unit</label>
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="Ingredient.Status" class="form-check-input" />
                        <label class="form-check-label" asp-for="Ingredient.Status">Available</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Ingredient</button>
                </div>
            </form>
        </div>
    </div>
</div>

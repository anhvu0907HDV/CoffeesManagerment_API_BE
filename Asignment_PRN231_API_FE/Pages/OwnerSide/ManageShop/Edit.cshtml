@page
@model Asignment_PRN231_API_FE.Pages.OwnerSide.ManageShop.EditModel
@{
    Layout = "_LayoutOwnerMangement";
    ViewData["Title"] = "Edit Shop Info";
    var toast = TempData["Toast"] != null
            ? JsonSerializer.Deserialize<Toast>(TempData["Toast"].ToString())
            : null;
}
@if (toast != null)
{
    <partial name="_Layout_Toast" model="toast" />
}
<div class="container-xl px-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-9">
            <div class="card my-5">
                <div class="card-body p-5 text-center">
                    <div class="h2 fw-bold fw-light mb-3">Edit Shop</div>
                </div>
                <hr class="my-0" />
                <div class="card-body p-5">
                    <form method="post">
                        <input type="hidden" asp-for="Shop.ShopId" />

                        <div class="mb-3">
                            <label class="form-label">Shop Name</label>
                            <input asp-for="Shop.Name" class="form-control" placeholder="Enter shop name" />
                            <span asp-validation-for="Shop.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <input asp-for="Shop.Address" class="form-control" placeholder="Enter address" />
                            <span asp-validation-for="Shop.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input asp-for="Shop.PhoneNumber" type="tel" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="Shop.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Save Shop</button>
                            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
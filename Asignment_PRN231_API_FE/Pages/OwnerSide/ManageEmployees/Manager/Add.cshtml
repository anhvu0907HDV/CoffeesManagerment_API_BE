@page
@model Asignment_PRN231_API_FE.Pages.OwnerSide.ManageEmployees.Manager.AddModel

@{
    ViewData["Title"] = "Add Manager";
    Layout = "_LayoutOwnerMangement";
    var toast = TempData["Toast"] != null
        ? JsonSerializer.Deserialize<Toast>(TempData["Toast"].ToString())
        : null;
}
@if (toast != null)
{
    <partial name="_Layout_Toast" model="toast" />
}
<div class="container-xl px-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-9">
            <!-- Social registration form-->
            <div class="card my-5">
                <div class="card-body p-5 text-center">
                    <div class="h2 fw-bold fw-light mb-3">Create an Account for Manager</div>
                </div>
                <hr class="my-0" />
                <div class="card-body p-5">
                    <!-- Login form-->
                    <form method="post" enctype="multipart/form-data">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="col-xl-4">
                                <div class="card mb-4 mb-xl-0 ">
                                    <div class="card-header">Profile Picture</div>
                                    <div class="card-body text-center">
                                        <!-- Ảnh xem trước -->
                                        <img id="previewImage" class="img-account-profile rounded-circle mb-2"
                                             src="~/avartars/default-avatar.png"
                                             alt="Avatar Preview" style="width: 150px; height: 150px; object-fit: cover;" />

                                        <div class="small font-italic text-muted mb-4">JPG hoặc PNG không quá 5MB</div>

                                        <!-- Input chọn ảnh -->
                                        <input type="file" id="avatarInput" class="form-control-file" asp-for="Manager.Avatar" accept="image/png, image/jpeg"
                                               onchange="previewAvatar(event)" />

                                    </div>
                                    <span asp-validation-for="Manager.Avatar" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label class="text-gray-600 small" for="emailExample">Email address</label>
                            <input asp-for="Manager.Email" class="form-control form-control-solid" aria-describedby="emailExample" />
                            <span asp-validation-for="Manager.Email" class="text-danger"></span>
                        </div>

                        <!-- Form Row -->
                        <div class="row gx-3">
                            <div class="col-md-6">
                                <!-- Password -->
                                <div class="mb-3">
                                    <label class="text-gray-600 small" for="passwordExample">Password</label>
                                    <input asp-for="Manager.Password" type="password" class="form-control form-control-solid" aria-describedby="passwordExample" />
                                    <span asp-validation-for="Manager.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Confirm Password -->
                                <div class="mb-3">
                                    <label class="text-gray-600 small" for="confirmPasswordExample">Confirm Password</label>
                                    <input asp-for="Manager.ConfirmPassword" type="password" class="form-control form-control-solid" aria-describedby="confirmPasswordExample" />
                                    <span asp-validation-for="Manager.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- Form Row -->
                        <div class="row gx-3">
                            <div class="col-md-6">
                                <!-- First Name -->
                                <div class="mb-3">
                                    <label class="text-gray-600 small" for="firstNameExample">First name</label>
                                    <input asp-for="Manager.FirstName" class="form-control form-control-solid" aria-describedby="firstNameExample" />
                                    <span asp-validation-for="Manager.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Last Name -->
                                <div class="mb-3">
                                    <label class="text-gray-600 small" for="lastNameExample">Last name</label>
                                    <input asp-for="Manager.LastName" class="form-control form-control-solid" aria-describedby="lastNameExample" />
                                    <span asp-validation-for="Manager.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row gx-3">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Sex</label>
                                    <select asp-for="Manager.Sex" class="form-control form-control-solid">
                                        <option value="">-- Select --</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Manager.Sex" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Phone Number</label>
                                    <input asp-for="Manager.PhoneNo" type="tel" class="form-control form-control-solid" />
                                    <span asp-validation-for="Manager.PhoneNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>Branches</label>
                            <select asp-for="Manager.ShopId" class="form-control form-control-solid">
                                <option value="">--- Select Shop ---</option>
                                @foreach (var item in Model.Shops)
                                {
                                    <option value="@item.ShopId">@item.Name</option>
                                })
                            </select>
                            <span asp-validation-for="Manager.ShopId" class="text-danger"></span>
                        </div>
                        <!-- Terms & Conditions -->
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Manager.AcceptTerms" required />
                                <label class="form-check-label" for="AcceptTerms">
                                    I accept the <a href="#!">terms &amp; conditions</a>.
                                </label>
                                <span asp-validation-for="Manager.AcceptTerms" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Create Manager</button>
                        </div>

                    </form>


                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function previewAvatar(event) {
            var file = event.target.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImage').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }
    </script>

}
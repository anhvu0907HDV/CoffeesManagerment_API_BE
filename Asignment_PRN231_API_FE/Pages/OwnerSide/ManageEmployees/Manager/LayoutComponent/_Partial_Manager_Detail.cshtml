@model ManagerDetailVM

<div class="card shadow-lg p-4">
    

    <h4 class="mb-3">Manager Information</h4>
    <!-- Hiển thị Avatar -->
    
    <div class="row align-items-center">
        <!-- Avatar -->
        <div class="col-md-2 ms-5 text-center">
            <img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle mb-3"
                 style="width: 120px; height: 120px; object-fit: cover; border: 2px solid #ddd;">
        </div>

        <!-- Thông tin cá nhân -->
        <div class="col-md-4">
            <p>
                <label asp-for="FirstName" class="fw-bold"></label>:
                <strong>@Model.FirstName</strong>
            </p>
            <p>
                <label asp-for="LastName" class="fw-bold"></label>:
                <strong>@Model.LastName</strong>
            </p>
            <p>
                <label asp-for="Email" class="fw-bold"></label>:
                <strong>@Model.Email</strong>
            </p>
        </div>

        <!-- Thông tin liên hệ -->
        <div class="col-md-4">
            <p>
                <label asp-for="PhoneNo" class="fw-bold"></label>:
                <strong>@Model.PhoneNo</strong>
            </p>
            <p>
                <label asp-for="Sex" class="fw-bold"></label>:
                <strong>@Model.Sex</strong>
            </p>
            <div class="d-flex align-items-center">
                <p class="mb-0">
                    <label asp-for="ShopId" class="fw-bold"></label>:
                    <strong>@(Model.ShopId?.ToString() ?? "Not Assigned")</strong>
                </p>

                @if (Model.ShopId != null)
                {
                    <button class="btn btn-outline-secondary btn-sm ms-3" type="button" data-bs-toggle="collapse" data-bs-target="#shopInfoContainer"
                            aria-expanded="false" aria-controls="shopInfoContainer">
                        Show Shop Info
                    </button>
                }
            </div>
        </div>
    </div>
</div>
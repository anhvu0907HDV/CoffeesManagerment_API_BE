<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!-- Bootstrap & jQuery -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/jquery.datatables.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="icon" href="~/assets/img/favicon.png" type="image/x-icon" />
    <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/js/all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.0/feather.min.js"></script>
</head>
<body class="nav-fixed">

    <partial name="/Pages/Shared/LayoutOwnerComponent/_Layout_sidenavAccordion_Order.cshtml" />

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sidenav shadow-right sidenav-light">
                <div class="sidenav-menu">
                    <div class="nav accordion" id="accordionSidenav">
                        <div class="sidenav-menu-heading">CORE</div>
                        <a class="nav-link" asp-page="/StaffSide/ManageOrder/CreateOrder">
                            <div class="nav-link-icon"><i class="fas fa-plus-circle"></i></div>
                            Create Order
                        </a>
                        <a class="nav-link" asp-page="/StaffSide/ManageOrder/ViewOrder">
                            <div class="nav-link-icon"><i class="fas fa-list"></i></div>
                            View Order
                        </a>
                    </div>
                </div>
                <div class="sidenav-footer">
                    <div class="small">Logged in as: </div>
                    <span>@User.Identity?.Name</span>
                </div>
            </nav>
        </div>

        <!-- Main content -->
        <div id="layoutSidenav_content">
            <main>
                <header class="py-3 mb-4 bg-gradient-primary-to-secondary">
                    <div class="container-xl px-4">
                        <div class="text-center">
                            <h1 class="text-white">Staff Side</h1>
                        </div>
                    </div>
                </header>

                <div class="container-xl px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="footer-admin mt-auto footer-light">
                <div class="container-xl px-4">
                    <div class="row">
                        <div class="col-md-6 small">Copyright &copy; Your Website 2021</div>
                        <div class="col-md-6 text-md-end small">
                            <a href="#">Privacy Policy</a> &middot;
                            <a href="#">Terms & Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @RenderSection("Scripts", required: false)

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/toasts.js"></script>
</body>
</html>
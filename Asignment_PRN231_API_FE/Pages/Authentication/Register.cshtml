@page
@model Asignment_PRN231_API_FE.Pages.Authentication.RegisterModel
@{
    Layout = "/Pages/Shared/_LayoutAuthentication.cshtml";
    ViewData["Title"] = "Register";
    var toast = TempData["Toast"] != null
            ? JsonSerializer.Deserialize<Toast>(TempData["Toast"].ToString())
            : null;
}
@if (toast != null)
{
    <partial name="_Layout_Toast" model="toast" />
}
<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        
        <main>
            <div class="container-xl px-4">
                <div class="row justify-content-center">
                    <div class="col-xl-8 col-lg-9">
                        <!-- Social registration form-->
                        <div class="card my-5">
                            <div class="card-body p-5 text-center">
                                <div class="h2 fw-bold fw-light mb-3">Create an Account</div>
                            </div>
                            <hr class="my-0" />
                            <div class="card-body p-5">
                                <!-- Login form-->

                                <partial name="_Layout_Register_Form" model="@Model.RegisterVM" />

                            </div>
                            <hr class="my-0" />
                            <div class="card-body px-5 py-4">
                                <div class="small text-center">
                                    Have an account?
                                    <a href="./Login">Sign in!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <partial name="_Layout_Footer_Authentication" />

</div>
@section Scripts {
    <script>
        function previewAvatar(event) {
            var file = event.target.files[0]; 
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImage').src = e.target.result;
                };
                reader.readAsDataURL(file); 
            }
        }
    </script>
   
}
@model RegisterVM

<form method="post" enctype="multipart/form-data">
    <div class="card-body d-flex flex-column align-items-center">
        <div class="col-xl-4">
            <div class="card mb-4 mb-xl-0 ">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Ảnh xem trước -->
                    <img id="previewImage" class="img-account-profile rounded-circle mb-2"
                         src="~/avartars/default-avatar.png"
                         alt="Avatar Preview" style="width: 150px; height: 150px; object-fit: cover;" />

                    <div class="small font-italic text-muted mb-4">JPG hoặc PNG không quá 5MB</div>

                    <!-- Input chọn ảnh -->
                    <input type="file" id="avatarInput" class="form-control-file" asp-for="@Model.Avatar" accept="image/png, image/jpeg"
                           onchange="previewAvatar(event)" />

                </div>
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>
        </div>
    </div>

        <!-- Email -->
        <div class="mb-3">
            <label class="text-gray-600 small" for="emailExample">Email address</label>
            <input asp-for="@Model.Email" class="form-control form-control-solid" aria-describedby="emailExample" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Form Row -->
        <div class="row gx-3">
            <div class="col-md-6">
                <!-- Password -->
                <div class="mb-3">
                    <label class="text-gray-600 small" for="passwordExample">Password</label>
                    <input asp-for="@Model.Password" type="password" class="form-control form-control-solid" aria-describedby="passwordExample" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Confirm Password -->
                <div class="mb-3">
                    <label class="text-gray-600 small" for="confirmPasswordExample">Confirm Password</label>
                    <input asp-for="@Model.ConfirmPassword" type="password" class="form-control form-control-solid" aria-describedby="confirmPasswordExample" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <!-- Form Row -->
        <div class="row gx-3">
            <div class="col-md-6">
                <!-- First Name -->
                <div class="mb-3">
                    <label class="text-gray-600 small" for="firstNameExample">First name</label>
                    <input asp-for="@Model.FirstName" class="form-control form-control-solid" aria-describedby="firstNameExample" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Last Name -->
                <div class="mb-3">
                    <label class="text-gray-600 small" for="lastNameExample">Last name</label>
                    <input asp-for="@Model.LastName" class="form-control form-control-solid" aria-describedby="lastNameExample" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row gx-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label>Sex</label>
                    <select asp-for="Sex" class="form-control form-control-solid">
                        <option value="">-- Select --</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Sex" class="text-danger"></span>
                </div>
            </div>


            <div class="col-md-6">
                <div class="mb-3">
                    <label>Phone Number</label>
                    <input asp-for="PhoneNo" type="tel" class="form-control form-control-solid" />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label>Branches</label>
            <select asp-for="ShopId" class="form-control form-control-solid">
            <option value="">--- Select Shop ---</option>
                @foreach (var item in Model.Shops)
                {
                    <option value="@item.ShopId">@item.Name</option>
                })
            </select>
            <span asp-validation-for="ShopId" class="text-danger"></span>
        </div>
        <!-- Terms & Conditions -->
        <div class="d-flex align-items-center justify-content-between">
            <div class="form-check">
            <input class="form-check-input" asp-for="AcceptTerms" required />
                <label class="form-check-label" for="AcceptTerms">
                    I accept the <a href="#!">terms &amp; conditions</a>.
                </label>
                <span asp-validation-for="AcceptTerms" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create Account</button>
        </div>

</form>

@page
@model Asignment_PRN231_API_FE.Pages.StaffSide.ManageOrder.ViewOrderModel
@{
	Layout = "_LayoutOrderMangement";
	ViewData["Title"] = "Danh sách đơn hàng";
}
<h2 class="mb-4">Danh sách đơn hàng</h2>

<form method="get" class="row mb-4">
    <div class="col-md-4">
        <select class="form-select" asp-for="SelectedStatus" asp-items="Model.OrderStatuses">
            <option value="">-- Lọc theo trạng thái --</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Lọc</button>
    </div>
</form>

@if (Model.Orders != null && Model.Orders.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Total</th>
                <th>Status</th>
                <th>Payment Method</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.TotalAmount.ToString("N0")</td>
                    <td>
                        @if (order.OrderStatus == "Pending")
                        {
                            <span class="badge bg-success text-white">@order.OrderStatus</span>
                        }
                        else if (order.OrderStatus == "Completed")
                        {
                            <span class="badge bg-primary text-white">@order.OrderStatus</span>
                        }
                        else if (order.OrderStatus == "Canceled")
                        {
                            <span class="badge bg-danger text-white">@order.OrderStatus</span>
                        }
                    </td>
                <td>@order.Payment.PaymentMethod</td>
                <td>
                        <a class="btn btn-sm btn-outline-primary" href="/StaffSide/ManageOrder/ViewDetailOrder?id=@order.OrderId">Xem</a>
                        @if (order.OrderStatus == "abc")
                        {
                            <a class="btn btn-sm btn-outline-primary" href="/StaffSide/ManageOrder/UpdateOrder?id=@order.OrderId">Sửa</a>
                        }
                        @if (order.OrderStatus != "Canceled")
                        {
                            <button class="btn btn-sm btn-outline-danger" onclick="cancelOrder(@order.OrderId)">Hủy</button>
                        }
                    </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Không có đơn hàng nào.</div>
}
@section Scripts {
    <script>
        // Hàm hủy đơn hàng
        async function cancelOrder(orderId) {
            const confirmCancel = confirm("Bạn có chắc muốn hủy đơn hàng này?");
            if (confirmCancel) {
                const response = await fetch(`https://localhost:7079/staff/update-order-status/${orderId}`, {
                    method: "PUT",
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        orderStatus: "Canceled",
                        paymentStatus: "Canceled"
                    })
                });

                if (response.ok) {
                    alert("✅ Đơn hàng đã được hủy!");
                    location.reload(); // Tải lại trang để cập nhật danh sách đơn hàng
                } else {
                    alert("❌ Đã có lỗi xảy ra khi hủy đơn hàng.");
                }
            }
        }
    </script>
}